source 'https://rubygems.org'

gem 'rails', '4.1.4'
gem 'thin'

# Project dependencies
gem 'coderay'                                 # coderay to assist in text styling
gem 'dotenv-rails'	                          # dotenv to make setting env variables easy
gem 'gollum'                                  # gollum to assist in text styling
gem 'htmlentities'                            # htmlentities for sanitizing input
gem 'pg'
gem 'nokogiri'                                # nokogiri to assist in text styling
gem 'redcarpet'                               # redcarpet to assist in text styling
gem 'sanitize'                                # sanitize for sanitizing input
gem 'sorcery'                                 # sorcery authentication
gem 'stringex'                                # stringex for url slugs
gem 'uglifier'
gem 'will_paginate'                           # will_paginate for pagination
gem 'jwt'                                     # jwt for JSON Web Token authentication
gem 'sass-rails', github: 'rails/sass-rails'  # sass for css compilation

gem 'capistrano', '~> 3.1.0'
gem 'capistrano-bundler', '~> 1.1.2'
gem 'capistrano-rails', '~> 1.1.1'
gem 'capistrano-rvm', github: "capistrano/rvm"

# User whenever to run our rake tasks and not crontab
gem 'whenever', :require => false

# Rails 4 transition gems
gem 'rails-observers'
gem 'actionpack-page_caching'
gem 'actionpack-action_caching'

group :development do
	gem 'debugger'
end
